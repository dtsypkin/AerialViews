<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="@string/category_apple_and_community_videos">
                <ListPreference
                    app:defaultValue="@string/location_style_default"
                    app:entries="@array/location_type_entries"
                    app:entryValues="@array/location_style_values"
                    app:key="location_style"
                    app:title="@string/appearance_show_location_title"
                    app:dialogTitle="@string/appearance_show_location_title"
                    app:useSimpleSummaryProvider="true" />
        </PreferenceCategory>

        <PreferenceCategory app:title="@string/category_all_other_videos">
                <ListPreference
                    app:defaultValue="@string/filename_as_location_default"
                    app:entries="@array/filename_as_location_entries"
                    app:entryValues="@array/filename_as_location_values"
                    app:key="filename_as_location"
                    app:title="@string/appearance_filename_as_location_title"
                    app:dialogTitle="@string/appearance_filename_as_location_title" />
        </PreferenceCategory>

        <PreferenceCategory app:title="@string/category_options">
                <ListPreference
                    app:defaultValue="@string/text_size_default"
                    app:entries="@array/text_size_entries"
                    app:entryValues="@array/text_size_values"
                    app:key="location_size"
                    app:title="@string/appearance_location_size_title"
                    app:useSimpleSummaryProvider="true" />
        </PreferenceCategory>
</PreferenceScreen>
